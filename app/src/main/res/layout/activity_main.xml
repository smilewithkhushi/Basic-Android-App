<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ToastHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="TOAST IN KOTLIN"
                    android:textColor="#9709AF"
                    android:textSize="20sp" />
"
                <TextView
                            android:id="@+id/toastInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:fontFamily="monospace"
                            android:text="@string/toast_info"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_marginVertical="5dp"
                        android:paddingHorizontal="20dp"
                        android:text="DOWNLOAD" />

                    <Button
                        android:id="@+id/button_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:paddingHorizontal="20dp"
                        android:text="UPLOAD" />

                </LinearLayout>

                <TextView
                    android:id="@+id/themetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="CLICK ON BUTTON TO CHANGE APP THEME"
                    android:textAlignment="center"

                    android:textColor="#9709AF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/darktheme"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:backgroundTint="#020D4C"

                    android:text="DARK THEME"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/lighttheme"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:backgroundTint="#03A9F4"

                    android:text="LIGHT THEME"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/intentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="INTENTS IN KOTLIN APP"
                    android:textAlignment="center"
                    android:textColor="#9709AF"
                    android:textSize="20sp" />

                <TextView
                            android:id="@+id/expIntentInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:fontFamily="monospace"
                            android:text="@string/expIntent_info"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                <Button
                    android:id="@+id/secondScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:backgroundTint="#FF03DAC5"
                    android:text="CLICK FOR SECOND SCREEN"
                    android:textColor="@color/black" />







            </LinearLayout>
        </ScrollView>

</LinearLayout>




